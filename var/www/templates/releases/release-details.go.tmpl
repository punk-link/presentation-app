{{ define "release-details.go.tmpl" }}
<div class="album">
       <div class="bg-decor"><picture><source srcset="/assets/img/logosback.webp" type="image/webp"><img src="/assets/img/logosback.png" alt="декоративный элемент"></picture></div>
				<div class="link">
					<a href="#" class="link__albums">3 albums</a>
					<a href="#" class="link__compilations">1 compilations</a>
				</div>
    <div class="title">
        <h1 class="title__title">{{ .ReleaseName }}</h1>
        <span class="title__year">{{ .ReleaseDate }}</span>
    </div>
    <div class="album__img">
        <picture>
            <img src="{{ .ImageDetails.Url }}" alt="{{ .ImageDetails.AltText }}">
            <source srcset="/assets/img/cover.webp" type="image/webp">
        </picture>
    </div>
    {{ template "track-details.go.tmpl" . }}
    <p class="album__description">
    {{ .Description }}
    </p>
</div>
{{ end }}