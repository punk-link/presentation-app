{{ define "streaming-platforms.go.tmpl" }}
<div class="lable-music">
<div class="bg-nota"><picture><source srcset="/assets/img/bg.webp" type="image/webp"><img src="/assets/img/bg.png" alt="декоративный элемент"></picture></div>
    <h3 class="lable-music__title">Listen our music on your<br>favourite streaming platform:</h3>
    <ul class="lable-music__list">
        {{ $platformName := "" }}
        {{ $platformIconPath := "" }}
        {{ range $i, $platform := .StreamingPlatforms}}
            {{ $platformName = getPlatformName $platform.Id }}
            {{ $platformIconPath = getPlatformIconPath $platform.Id }}
            <li class="lable-music__list-item" style="background-image:url('/assets/img/{{ $platformIconPath }}') ;">
                <a href="{{ $platform.Url }}">{{ $platformName }}</a>
            </li>
        {{ end }}
    </ul>
    <div class="lable-music__form">
					<form class="form" action="#" method="post">
						<div class="form__item">
							<label class="form__label" for="text">lorem ipsum</label>
							<input class="form__input" placeholder="add link on another platform" name="username" type="text" />
						</div>
						<div class="form__item">
							<label class="form__label" for="text"></label>
							<input class="form__input" placeholder="name of platform" name="username" type="text" />
						</div>
						<button class="form__button" type="submit"><picture><source srcset="/assets/img/icons/icon-plus.webp" type="/assets/image/webp"><img src="img/icons/icon-plus.png" alt="add platform" /></picture>add platform</button>
					</form>
				</div>
    {{ if gt (len .StreamingPlatforms) 5 }}
  
    {{ end }}
          <button class="share-link">
					<picture>
						<source srcset="/assets/img/icons/icon-link.webp" type="image/webp">
						<img src="/assets/img/icons/icon-link.png" alt="share link" />
					</picture>share link
        </button>
</div>
{{ end }}