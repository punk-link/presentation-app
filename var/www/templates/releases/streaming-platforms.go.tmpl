{{ define "streaming-platforms.go.tmpl" }}
<div class="lable-music">
    <div class="bg-nota">
        <picture>
            <source srcset="/assets/img/bg.webp" type="image/webp">
            <img src="/assets/img/bg.png">
        </picture>
    </div>
    <h3 class="lable-music__title">Listen our music on your<br>favourite streaming platform:</h3>
    <ul class="lable-music__list">
        {{ $platformName := "" }}
        {{ $platformIconPath := "" }}
        {{ range $i, $platform := .StreamingPlatforms}}
            {{ $platformName = getPlatformName $platform.Id }}
            {{ $platformIconPath = getPlatformIconPath $platform.Id }}
            <li class="lable-music__list-item">
            <img src="/assets/img/{{ $platformIconPath }}" alt="{{ $platformName }}">
                <a href="{{ $platform.Url }}">{{ $platformName }}</a>
            </li>
        {{ end }}
    </ul>
    <button class="share-link">
        <picture>
            <source srcset="/assets/img/icons/icon-link.webp" type="image/webp">
            <img src="/assets/img/icons/icon-link.png" alt="share link" />
        </picture>share link
    </button>
    <!-- =============POPUP======================= -->
			<div class="popup hidden" id="modal-1" data-modal>
				<div class="popup__content">
					<div class="popup__body" style="background-image: url(/assets/img/nota-share.png);">
						<div class="popup__share" style="background-image: url(/assets/img/icons/share.png);">share</div>
						<div class="popup__media">
							<span>social media</span>
							<div class="popup__media-items">
								<a href="#" class="popup__media-item facebook" style="background-image: url(/assets/img/icons/facebook.svg);"></a>
								<a href="#" class="popup__media-item instagram" style="background-image: url(/assets/img/icons/instagram.svg);"></a>
								<a href="#" class="popup__media-item twitter" style="background-image: url(/assets/img/icons/twitter.svg);"></a>
								<a href="#" class="popup__media-item vk" style="background-image: url(/assets/img/icons/vk.svg);"></a>
							</div>
						</div>
						<div class="popup__link">
							<span>direct link</span>
							<div class="popup__link-text" id="text">https://synonim/album/24576419/track/110546552
								<button id="copy" style="background-image: url(/assets/img/icons/copy.png);">
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
</div>
{{ end }}