{{ define "global/header.go.tmpl" }}
<header class="header">
    <div class="header__wrap">
        <a href="/artists/{{ (index .Artists 0).Slug }}" class="header__link">
            <picture>
                <source srcset="/assets/img/icons/icon-arrow.webp" type="image/webp">
                <img src="/assets/img/icons/icon-arrow.png" />
            </picture>
        </a>
        {{ range .Artists }}
        <a href="/artists/{{ .Slug }}" class="header__link">{{ .Name }}</a>
        {{ end }}
        <a class="logo" href="/">
            <picture>
                <source srcset="/assets/img/logo.webp" type="image/webp">
                <img src="/assets/img/logo.png" alt="Synonym" />
            </picture>
        </a>
    </div>
</header>
{{ end }}